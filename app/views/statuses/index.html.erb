<ul class="media">
  <% @statuses.each do |status| %>
    <li class="media media-list">
      <h4><%= status.comment %></h4>
      <em><%= status.user %></em>
      <div>
        <br/>
        <%= link_to time_ago_in_words(status.created_at),status_path(status) %>
        <%= link_to "Change",edit_status_path(status) %>
        <%= link_to 'Delete',status, method: :delete, data: { confirm: 'Are you sure about this?' } %>
      </div>
      <hr/>

    </li> 
  <% end %>
</ul>

