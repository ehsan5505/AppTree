<div class="row">
	<div class="col-md-7">
		<div class="page-header row">
			<span class="col-md-2">
				<%= image_tag @user.gravatar,:class=>"img-responsive img-circle" %>
			</span>
			<!-- <span class="col-md-1"></span> -->
			<span class="col-md-8">
				<h1><%= @user.fullName %></h1>
			</span>	
		</div>
	</div>
</div> 
<div class="row">
	<div class="col-md-6">
	.. friend list
	</div>
	<div class="col-md-5 pull-right panel panel-default">
	<% @statuses.each do |status| %>
		<div class="panel-body">
			<%= status.comment %>
			<div class="btn-group">
			<%= link_to time_ago_in_words(status.created_at)+" ago..",edit_status_path(status),:class=>"btn btn-default" %>
			</div>
		</div>
	<% end %>
	</div>
</div>