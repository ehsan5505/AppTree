<div class="row">
	<div class="col-md-3">
		<div class="page-header">
			<h1><%= @user.fullName %></h1>	
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
	.. friend list
	</div>
	<div class="col-md-5 pull-right panel panel-default">
	<% @statuses.each do |status| %>
		<div class="panel-body">
			<%= status.comment %>
			<div class="btn-group">
			<%= link_to time_ago_in_words(status.created_at)+" ago..",edit_status_path(status),:class=>"btn btn-default" %>
			</div>
		</div>
	<% end %>
	</div>
</div>